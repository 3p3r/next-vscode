{
  "name": "filesystem",
  "version": "1.0.0",
  "displayName": "ephemeral filesystem",
  "description": "in memory file system provider for vscode",
  "publisher": "next-vscode",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*",
    "onFileSystem:memfs"
  ],
  "main": "extension.js",
  "browser": "extension.js",
  "scripts": {
    "build": "esbuild extension.ts --bundle --outfile=extension.js --external:vscode --format=cjs --platform=node --sourcemap --target=es2024 --minify",
    "watch": "esbuild extension.ts --bundle --outfile=extension.js --external:vscode --format=cjs --platform=node --sourcemap --target=es2024 --watch"
  },
  "contributes": {
    "commands": [
      {
        "command": "memfs.init",
        "title": "Create Files",
        "category": "MemFS"
      },
      {
        "command": "memfs.reset",
        "title": "Delete Files",
        "category": "MemFS"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "memfs.init",
          "when": "workbenchState == workspace"
        },
        {
          "command": "memfs.reset",
          "when": "workbenchState == workspace"
        }
      ]
    }
  },
  "author": "Sepehr Laal",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/node": "^25.0.7",
    "@types/vscode": "^1.108.1",
    "esbuild": "^0.27.2"
  }
}
